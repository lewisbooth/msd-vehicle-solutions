.container
  width 100%
  box-sizing border-box
  max-width 1160px
  margin 0 auto
  padding 0 2rem
  position relative

.row
  width 100%
  clear both

.centered
  margin 0 auto

.center-content
  text-align center

.no-margin
  margin 0 !important

.no-padding
  padding 0

.vertical-padding
  padding 2rem 0

.space-between
  display flex
  justify-content space-between
  align-items center
  flex-wrap wrap
  width 100%

  &-group
    display flex
    align-items center

.split
  width calc(50% - 2rem)

  &-3
    width calc(33% - 2rem)

  &-container
    display flex
    justify-content space-between

.hidden
  display none !important