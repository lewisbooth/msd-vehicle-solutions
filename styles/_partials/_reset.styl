html
  font-family $openSansRegular
  font-size 10px
  line-height 1.8em
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  padding 0
  margin 0

body
  padding 0
  margin 0
  font-size 1.8rem

a, li
  text-decoration none
  list-style none
  white-space nowrap

img, svg
  display block
  width 100%
  max-height 100%
  border 0

ul
  padding-left 0