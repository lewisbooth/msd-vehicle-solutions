.admin-header
  margin-top 5rem

  h1
    font-size 5.4rem

  a
    margin-left 3rem
  
.admin-nav
  height 4rem
  display flex
  align-items center
  background-color $richBlack
  color white
  font-size 1.4rem
  position relative
  z-index 99999999

  .container
    display flex
    justify-content space-between

    a
      color white
      text-decoration underline
      font-family $openSansSemibold

.sign-in-form
  background-color $softGrey
  padding 2rem
  margin-bottom 2rem
  display flex
  flex-direction column
  box-sizing border-box
  align-items flex-start
  max-width 100%
  width 63rem

  label 
    margin-bottom 1rem

  input 
    margin-bottom 2rem
    box-sizing border-box
    padding 1rem
    width 100%
    font-size 1.6rem

form.add-vehicle

  p
    margin 0 0 1rem 0

  label, input, select
    display block

  label
    margin-bottom 1rem
    font-family $openSansSemibold

  input, select, textarea
    font-size 1.6rem
    margin-bottom 3rem
    margin-right 0
    box-sizing border-box
    width 100%
    padding 1rem

  textarea
    max-width 100%
    min-width 100%

  label.checkbox-label
    display inline-block
    margin-bottom 0
    font-family $openSansRegular
    margin-right 2rem
  
  input[type="checkbox"]
    display inline-block
    width auto
    max-width auto
    min-width auto
    margin-right 1rem

  img.add-vehicle-photo
    padding 0 !important

  .space-between div 
    max-width 30%

  .form-row
    input[type="number"]
      max-width 100px
      display inline-block
      margin-right 1rem
      
    input[type="radio"]
      width auto
      max-width auto
      min-width auto
      margin-right 2rem
      display inline-block

      & span 
        margin-right 2rem

.pell
  width 100%
  line-height 1.4
  color $richBlack
  font-size 1.6rem
  border none
  margin-bottom 4rem

  textarea
    display none

  &__editor
    border 1px solid $greyBorders

  &-content
    height 200px
    color $richBlack
    background white
    font-size 1.6rem

    h1, h2, h3, p
      color $richBlack

    a
      color $mainBlue
      text-decoration underline

  button
    margin 0 !important
    color $richBlack
    border-radius 0
    padding 2rem
    box-sizing border-box
    line-height 0

    &:hover
      background-color $mainBlue
      color white
    
  p
    margin 1rem 0
    font-size 1.6rem

  ol
    margin 1rem 0 1rem 4rem

    li
      list-style decimal      

  ul
    margin 1rem 0 1rem 4rem

    li
      list-style initial

  &-button
    position relative

    &:hover > div
      color white

  &-colour
    width 20px !important
    height 20px
    position absolute
    top 5px
    left 5px

    &-icon
      color hsl(6,77,35)
      padding 0 .5rem
      position relative
      
      &:hover
        color white

        > div
          display flex

    &-menu
      position absolute
      top 100%
      left 10px
      transform translateX(-50%)
      background white
      padding .5rem
      border 1px solid lightGreyBorder
      display none

      .pell-button:hover
        background lightGreyBorder
