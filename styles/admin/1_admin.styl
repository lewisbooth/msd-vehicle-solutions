.admin-nav
  height 4rem
  display flex
  align-items center
  background-color $richBlack
  color white
  font-size 1.4rem
  position relative
  z-index 99999999

  .container
    display flex
    justify-content space-between

    a
      color white
      text-decoration underline
      font-family $openSansSemibold

.sign-in-form
  background-color $softGrey
  padding 2rem
  margin-bottom 2rem
  display flex
  flex-direction column
  box-sizing border-box
  align-items flex-start
  max-width 100%
  width 63rem

  label 
    margin-bottom 1rem

  input 
    margin-bottom 2rem
    box-sizing border-box
    padding 1rem
    width 100%
    font-size 1.6rem