@media (max-width: $breakpointSmall)

  .small-hide
    display none !important

  .main-nav
    ul
      display none 
    
    &-dropdown-toggle
      display flex
      align-items center
      border 1px solid white
      padding 1.5rem 1rem 1.5rem 1.5rem
      border-radius 5px

  .cover-image-container
    height 25rem

  .top-flash .button-small
    display none

  .article-header

    h1
      font-size 2rem

    h3
      font-size 4.2rem
      letter-spacing px

  .content
    
    aside
      max-width 100vw
      margin 0 0 4rem 0

      .sidebar-block
        width 100%

  .instant-quote
    margin 0 -2rem 4rem -2rem
    box-sizing content-box

    h3
      font-size 3.6rem !important
      margin 1.5rem 0 3rem 0

    .options

      input 
        width 50%
        border-radius 0 !important
        border none
        border-bottom 1px solid $mainBlue
        padding 1.25rem !important

        &:nth-child(odd)
          border-right 1px solid $mainBlue

  .list-ticks li
    width 100%

  .cards 
    .card, &.cards-4 .card
      width 100%
      margin 2rem 0

  #instafeed a
    width 50%

  .instagram-logo
    display none

    & + h4
      margin-bottom 1rem !important
      font-size 2.5rem

  .footer .container
    .footer-column
      width 100%
    
  .split
    width 100%

    &-container
      display flex
      flex-wrap wrap
      justify-content space-between