@media (max-width: $breakpointSmall)

  h1
    font-size 4.2rem

  body
    padding-top 11.5rem

    &.admin
      padding-top 15.5rem

  .small-hide
    display none !important

  .main-nav

    &-main-logo
      height 6rem

    .mobile-nav-wrapper
      display flex
      width 100vw
      margin 0 -2rem
      padding 0 2rem
      justify-content space-between
      align-items center
      z-index 9
      background-color white

    .call-to-book
      z-index 999

    ul
      display block
      position fixed
      margin-left 0
      top 11.5rem
      left 0
      width 100vw
      transform translateY(-100%)
      transition transform 0.3s
      will-change transform
      font-size 2rem

      a
        padding 1.5rem 0

      li
        &.active
          border 0

        &:hover
          border 0

    &.mobile-active
      ul
        box-shadow 0px 10px 15px 5px rgba(0,0,0,0.25)
        transform translateY(0%)

      .mobile-nav-wrapper 
        .main-nav-dropdown-toggle
          .main-nav-dropdown-toggle-icon
            justify-content center
            
            &-top
              transform rotate(-45deg)
            &-middle
              opacity 0
              margin -2px 0
            &-bottom
              transform rotate(45deg)
      
    &-dropdown-toggle
      display inline-flex
      align-items center
      box-sizing content-box
      border 1px solid $darkBlue
      color $darkBlue
      padding 1.5rem 1rem 1.5rem 1.5rem
      border-radius 5px
      user-select none

      &:hover
        cursor pointer 

      &-icon
        display flex
        height 20px
        align-items center
        flex-direction column
        justify-content space-between
        margin 0
        margin-left 12px
        transition all .3s ease-in-out    

        div
          width 30px
          height 2px
          background-color $darkBlue
          transition all .3s ease-in-out    

  .cover-image-container
    height 25rem

  .top-flash     
    .button-small
      display none

  .article-header

    h1
      font-size 4.2rem

  .content
    
    aside
      max-width 100vw
      margin 0 0 4rem 0

      .sidebar-block
        width 100%

    article 

      h1
        margin-top 0 !important

  .instant-quote

    h3
      font-size 3.6rem !important
      margin 0 0 2rem 0

    .options

      input 
        width 50%
        border-radius 0 !important
        border none
        border-bottom 1px solid $mainBlue
        padding 1.25rem !important

        &:nth-child(odd)
          border-right 1px solid $mainBlue

  .list-ticks li
    width 100%


  .listing-selection 
    padding 3rem 0

    &-dropdown
      width 11rem

      &-group-option
        font-size 2rem

    button
      margin-top 2rem
      width 100%

    & .container > div
      font-size 2.8rem

  .cards 
    .card, &.cards-4 .card
      width 100%
      margin 2rem 0

  #instafeed a
    width 50%

  .instagram-logo
    display none

    & + h4
      margin-bottom 1rem !important
      font-size 2.5rem

  .footer .container
    .footer-column
      width 100%
    
  .split
    width 100%

    &-container
      display flex
      flex-wrap wrap
      justify-content space-between