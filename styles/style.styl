@import '_partials/*'

body
  padding-top 8.5rem

  &.admin
    padding-top 12.5rem

.main-nav
  background-color white
  width 100%
  position fixed
  z-index 999
  top 0
  box-shadow 0px 10px 5px -5px rgba(0,0,0,0.05) 
  
  &-container
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center
    height 100%

  &-main-logo
    height 6.8rem
    width auto
    margin .75rem 0

  &-menu
    display flex
    align-items stretch
    padding-left 0
    margin 0 8rem
    width 100%
    align-self stretch
    background-color white

    li
      flex-grow 1
      height calc(100% - 4px)
      box-sizing content-box

      & a
        color $darkBlue
        height 100%
        width 100%
        display flex
        align-items center
        justify-content center

      &.active
        border-bottom 4px solid $darkBlue

      &:hover
        border-bottom 4px solid $darkBlue

  &-dropdown-toggle
    display none
    color white

    &-icon
      font-size 4rem
      line-height 1rem
      font-family $openSansRegular
      margin-top -1.2rem
      margin-left 1rem

  .call-to-book
    height 8.5rem
    line-height 1.8rem

    &-text
      font-size 1.4rem
      letter-spacing 0.07em

    &-number
      font-size 2.6rem
      letter-spacing 0.05em
      margin-top 3px

.call-to-book
  background-color $mainGreen
  padding 1.8rem 2rem 2rem 2rem
  display flex
  white-space nowrap
  flex-direction column
  align-items center
  justify-content center
  box-sizing border-box
  color white
  line-height 2.6rem

  &:hover
    background-color $darkGreen

  &-text
    font-size 1.8rem
    letter-spacing 0.07em

  &-number
    font-family $exoSemibold
    font-size 3.6rem
    letter-spacing 0.2rem
    margin-top 3px

.top-flash
  padding 0.8rem
  background-color $mainBlue
  background linear-gradient(to bottom right, $lightBlue 0%, $mainBlue 100%)
  color white
  text-align center
  display flex
  align-items center

  &-success
    background none
    background-color $mainGreen

    .button-flash-remove
      background-color $mainGreen
      color $lightGreen

      &:hover
        background-color $darkGreen

  &-error
    background none
    background-color $error

    .button-flash-remove
      background-color $error
      color $errorLight

      &:hover
        background-color $errorDark

  &-warning
    background none
    background-color $warning

    .button-flash-remove
      background-color $warning
      color $warningLight

      &:hover
        background-color $warningDark

  h4
    font-family $exoLight
    margin 0 
    padding 0
    color white
    font-size 2rem
    line-height 1.4em
    display inline-block
    padding-right 2rem

    & strong
      font-family $exoSemibold

.flash-message
  p 
    padding 1rem
    color $mainGreen
    border 1px solid $mainGreen
    width 100%

    &.error
      color firebrick 
      border-color firebrick

.cover-image-container
  height 53rem
  overflow hidden
  display flex
  align-items center
  justify-content center
  border-bottom 3px solid $mainBlue

  img, picture, source
    min-height 100%
    min-width 100%
    max-width auto
    max-height auto

body.modal-active
  overflow hidden

  .modal
    display flex

    .button
      margin-bottom 0
      

.modal
  z-index 999999999
  background-color rgba(0,0,0,0.5)
  height 100vh
  width 100%
  position fixed
  top 0
  left 0
  box-sizing border-box
  display none
  align-items center
  justify-content center
  padding 2rem

  &-box
    background-color white
    padding 3rem
    border-radius 5px
    max-width 380px

.article-header
  position absolute
  bottom 0
  background-color white
  border-top 3px solid $mainBlue
  margin 0 -30px -3px -30px
  width 63rem
  box-sizing content-box
  padding 2.5rem 3rem 3rem 3rem

  &.no-shift
    position relative
    border-top none
    margin 6rem 0
    padding 0

  h1
    font-size 6.8rem
    font-family $exoSemibold
    margin-bottom -40px
    line-height 1em

.alternate-grey  
  & li
    padding .5rem 1rem

    & .split:first-child
      font-family $openSansSemibold

    &:nth-child(odd)
      background-color $softGrey
      
.content
  display flex
  flex-wrap wrap
  justify-content space-between

  &-block
    padding 2rem
    border 1px solid $greyBorders
    border-bottom 2px solid $mainBlue
    margin-bottom 4rem
  
  article 
    max-width 63rem
    margin-top 3rem
    margin-bottom 5rem

    &.full-width
      width 100%
      max-width 100%

      a.button 
        margin-bottom 0

    h1
      margin-top 2rem !important

    img 
      margin-bottom 1.6em

  aside
    max-width 42rem
    margin-top 5rem
    margin-bottom 5rem

    .sidebar-block
      margin-top 5rem
      border 1px solid #DEDEDE
      border-bottom 3px solid $mainBlue
      padding 1.8rem 2rem

.instant-quote
  width 100%
  background $mainBlue
  background linear-gradient(to bottom, $lightBlue 0%, $mainBlue 100%)
  margin-top -20.5rem
  color white
  padding 2rem 2rem 0 2rem
  box-sizing border-box

  h3
    color white
    margin-bottom 1.8rem

  a
    color white
    text-decoration underline

    &.small
      float right

  button[type=submit]
    margin 1rem 0 0 0
    padding 1rem 2rem

  .options
    display flex
    flex-wrap wrap
    margin 1.25rem 0 2.5rem 0

    &.stretch input
      flex-grow 1

    input
      color white
      border-radius 5px
      outline none 
      border none
      margin 0
      border-radius 0
      background-color $darkBlue
      background linear-gradient(to bottom, #133d6b 0%,#16467b 100%)
      border-right 1px solid $mainBlue
      text-transform none
      font-size 1.6rem
      padding 1rem 2rem
      letter-spacing 0

      &[checked]
        background-color white
        background linear-gradient(to bottom, #ffffff 20%,#dddddd 100%)
        color $richBlack

        &:hover
          background-color white
          background linear-gradient(to bottom, #ffffff 20%,#dddddd 100%)

      &:hover
        cursor pointer
        background-color $lightBlue
        background linear-gradient(to bottom, #3971ad 0%,#4282ca 100%)

      &:first-child
        border-radius 5px 0 0 5px

      &:last-child
        border-radius 0 5px 5px 0
        border-right none

  .result
    background-color $darkBlue
    margin 2.5rem -2rem 0 -2rem
    padding 1.5rem 2rem 2rem 2rem
    text-align center

    p
      margin 0 0 1.5rem 0

    output 
      font-family $exoSemibold
      font-size 5.6rem

    .per-day
      font-family $exoSemibold

.list-ticks
  width calc(100% - 42px)
  text-align left
  padding-left 0
  position relative
  margin-left 42px
  box-sizing border-box
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between

  li
    display inline-block
    width calc(49% - 20px)
    padding-bottom 20px
    line-height 1.6em
    position relative
    white-space normal

    &:before
      width 32px
      height 25px
      background-image url("/images/icons/tick.png")
      background-size cover
      position absolute 
      display inline-block
      content ""
      left -42px

  &.full-width li
    width 100%

.opening-times
  padding-left 0
  margin-top 1rem

  li
    width 100%
    display flex
    justify-content space-between

    .time
      font-family $openSansSemibold

.reviews
  p
    margin-bottom 1.6rem

  a
    margin 0 -2rem 
    padding 1rem 2rem
    display flex
    align-items center
    justify-content space-between
    color $richBlack

    &:hover
      background-color #f4f4f4

    & span
      display flex
      align-items center

  &-icon
    width 4rem
    margin-right 2rem

  &-stars
    width 13rem
    margin-right 10px

.gallery
  display flex
  flex-wrap wrap
  align-items flex-start
  width 100%
  margin-bottom 4rem

  &-image
    max-width 25%

.promoted-items
  margin 2rem 0 3rem 0

.cards
  display flex
  flex-wrap wrap
  width 100%
  align-items flex-start

  // 3 cards per row by default, adding .4-cards shows 4
  &.cards-4 .card
    width calc(25% - 0.5rem)
    margin-right 0.666rem

    &:nth-child(3n)
      margin-right 0.666rem

    &:nth-child(4n)
      margin-right 0

.card
  width calc(33.33% - 0.5rem)
  max-width 60rem
  margin 0 0.75rem 0 0
  background-color white
  padding 0.75rem
  padding-bottom 0
  box-sizing border-box
  border 1px solid $greyBorders
  margin-bottom 4rem
  position relative
  display inline-block
  color $richBlack

  &-border-bottom
    border-bottom 3px solid $mainBlue

  &:hover
    outline 2px solid $greyBorders

  &:nth-child(3n)
    margin-right 0

  &-image
    height 25rem
    width 100%
    background-position center
    background-size cover

  &-price
    background-color $mainBlue
    position absolute 
    top 0
    right 1.5rem
    padding 2rem 1rem 1rem 1rem
    color white
    font-family $exoSemibold
    font-size 3.2rem
    line-height 2.4rem
    display flex
    flex-direction column
    align-items center

    &-text
      content 'per day'
      font-family $openSansRegular
      font-size 1.4rem
      

    &-promoted
      background-color $mainGreen
      margin 1rem -1rem -2rem -1rem
      padding 0 1rem
      font-size 1.4rem
      text-transform uppercase
      letter-spacing 0.05rem
      width 100%
      text-align center

  &-text-container
    padding 2rem 1.25rem

  h5
    font-family $exoSemibold

  h6
    font-size 1.8rem
    text-transform uppercase
    font-family $exoLight

  &-availability
    display flex

    li
      position relative
      margin-left 1.5rem
      font-size 1.6rem
      line-height 2rem
      color $richBlack

      &:before
        width 18px
        height 14px
        background-image url("/images/icons/tick.png")
        background-size cover
        display inline-block
        content ""
        margin-right .5rem

      &.cross
        color #888
        
        &:before
          width 15px
          height 15px
          background-image url("/images/icons/cross.png")

  &-link
    color $mainBlue

    &:hover
      text-decoration underline

  &-services
    margin 1.5rem 0 0 0
    font-size 1.6rem
    line-height 1.8em

    li::before
      display inline-block
      vertical-align middle
      width 5px
      height 5px
      background-color #000000
      margin-right 1em
      content ' '
      border-radius 100%

a.card
  will-change transform
  transition transform .15s

  &:hover
    border-bottom-color $lightBlue

    & .card-link
      text-decoration underline

    .button-card
      background-color $lightBlue
      background-position right 1.5rem center

.listing
  margin-bottom 6rem

  &-results
    &-entry
      display flex
      align-items center
      background-color $softGrey
      margin-bottom 1rem
      height 12rem
      overflow hidden
      border 1px solid $greyBorders

      &:hover
        background-color $hoverGrey

        .card-link
          text-decoration underline

      h5
        font-family $exoSemibold !important

      h6
        font-size 1.8rem
        text-transform uppercase
        font-family $exoLight

      img
        max-width 180px

      &-text-container
        width 100%
        padding 0 2rem

  &-selection
    background-color $lightBlue
    padding 5rem 0
    margin-bottom 4rem
    text-align center

    button
      padding .75rem 1.5rem
      margin 0
    
    & .container 
      display flex
      justify-content center
      align-items center
      flex-wrap wrap
      
      & > div
        color white
        font-size 3.6rem
        line-height 1.2em
        margin-bottom 1rem
        display inline-block

    &-dropdown
      margin 0 1.5rem
      padding 0.5rem 0
      background url('/images/icons/dropdown-triangle.svg') no-repeat right center
      border-bottom 3px solid $darkBlue
      text-align left
      width 13rem
      position relative

      &:hover
        cursor pointer
        border-color $lightBlue

        & > .listing-selection-dropdown-group
          display block

      span 
        font-family $openSansSemibold
        user-select none
          
      &-group
        display none
        background-color $darkBlue
        position absolute
        top 100%
        width 100%
        font-size 2rem
        line-height 1.4em
        z-index 2
        box-sizing border-box
        border-radius 3px

        &-triangle
          height 1rem
          width 1rem
          background-color $darkBlue
          transform rotate(45deg)
          margin -.5rem auto
          z-index -1

        &-option
          padding 1rem
          user-select none
          
        &-option:hover
          background-color $mainBlue

  &-filter
    padding 1rem 2rem
    margin 2rem 0 4rem 0
    border 1px solid $greyBorders
    box-sizing border-box
    background-color $softGrey
    width 100%
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap
    font-size 1.6rem

    label 
      margin-right 1rem
      font-family $openSansSemibold

    .button
      padding .75rem 2rem
      margin-left 2rem
      margin-right 0
      margin-bottom 0
    
    span:last-child select 
      margin-right 0

.vehicle-page
  &-pricing
    text-align center
    padding 3rem 1rem 0 1rem
    box-sizing border-box
    border-bottom none

    &-prices
      display flex
      flex-direction row
      justify-content space-around
      flex-wrap wrap

      div
        width 33%

    h4
      color $richBlack
      font-size 2rem
      margin-bottom 1rem
    
    h3
      margin-bottom 0
    
    &-contact
      padding 1rem 2rem
      margin 0 -1rem
      background-color $mainGreen

      h4
        color white
        margin 0
        font-family $exoLight

    &-phone
      background linear-gradient(to bottom right, $lightBlue 0%, $mainBlue 100%)
      padding 1.5rem 2rem
      margin 0 -1rem

      h3
        color white
        margin 0        

section.grey
  background-color $softGrey
  padding 1rem 0
  margin-bottom 5rem

.our-services .card
  margin-bottom 0

.map
  margin-top 6rem
  .container
    display flex
    justify-content space-between

    .button
      margin-right 0

#map
  height 500px

#instafeed
  display flex
  align-items flex-start
  flex-wrap wrap
  margin-top 3rem
  margin-bottom 4rem
  clear both

  a
    width 20%
    overflow hidden
    position relative

    &:after
      content ""
      display block
      padding-bottom 100%    

.instagram-logo
  width 38px
  float left
  margin-right 2rem

  & + h4
    letter-spacing 0px

select, input, textarea
  border 1px solid $greyBorders
  padding 0.5rem
  font-size 1em
  outline 0
  margin-right 4rem
  min-width 80px

.contact-form
  margin-bottom 2rem

  label 
    margin-bottom 1rem
    display block
    font-family $exoSemibold

  input, textarea
    box-sizing border-box
    width 100%
    max-width 100%
    min-width 100%
    margin-bottom 2rem
    border 1px solid $greyBorders
    padding 1rem
    font-size 1.6rem

input.bot-trap
  width 0
  min-width 0
  height 0
  margin 0
  padding 0
  border none

.footer
  background-color $mainBlue
  padding 4rem 0 2rem 0
  color white
  font-size 1.6rem

  .container
    display flex
    flex-wrap wrap
    align-items flex start

    .footer-column
      width 33.33%
      

      ul
        display flex
        flex-direction column
        align-items flex-start
        margin-bottom 1.6rem

        .contact-icon
          width 1.5rem
          float left 
          margin-right 0.75rem

        a
          color white
          display flex

          &:hover
            text-decoration underline

          img 
            height 24px

      h6
        color white
        font-size 1.8rem
        margin-bottom 1rem

.amp-footer
  background-color $richBlack
  color white
  padding 1rem 0
  font-size 1.4rem

  .container
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap

    p
      padding 0
      margin 0
      color #c1c6cb

    a
      color white
      font-family $openSansSemibold

@import 'admin/*'
@import '_mediaQueries/*'
