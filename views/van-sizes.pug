extends layout

block coverImage
  .cover-image-container.row
    picture
      source(media="(max-width: 767px)" srcset="/images/services/loading-packages-into-van-600.jpg 1x")
      img(src="/images/services/loading-packages-into-van.jpg" alt="Cover Image - Van sizes")

block articleHeader
  .container
    .article-header
      h1 Which Van Should You Choose?
          
block articleContent
  article
    p Whether you're moving furniture, Spring cleaning, delivering parcels or carrying tools, or vans are ready for the job. We've put together this short guide to help you choose the most suitable vehicle for your needs. If you're still unsure, please call and we'll be happy to assist.
    p Our #[a(href="/vehicles/hire/vans") van listings] show the dimensions and load capacity for individual vehicles, and many are ply-lined for commercial use.
    .split-container.vertical-padding
      .split
        img(src="/images/page-content/van-sizes/small-van.jpg", alt="Small van")
      .split
        h3 Small Van
        ul.list-ticks.full-width
          li Items up to 120cm
          li Tools &amp; DIY projects
          li 2 Seats
        a(href="/vehicles/hire/vans?size=small").button Hire A Small Van
    .split-container.vertical-padding
      .split
        img(src="/images/page-content/van-sizes/medium-van.jpg", alt="Medium van")
      .split
        h3 Medium Van
        ul.list-ticks.full-width
          li Items up to 240cm
          li Sofas &amp; mattresses
          li 2 Seats
        a(href="/vehicles/hire/vans?size=medium").button Hire A Medium Van
    .split-container.vertical-padding
      .split
        img(src="/images/page-content/van-sizes/large-van.jpg", alt="Large van")
      .split
        h3 Large Van
        ul.list-ticks.full-width
          li Items up to 400cm
          li Multiple furniture items
          li 3 Seats
        a(href="/vehicles/hire/vans?size=large").button Hire A Large Van
    .split-container.vertical-padding
      .split
        img(src="/images/page-content/van-sizes/xl-van.jpg", alt="Extra large van")
      .split
        h3 Luton Van
        ul.list-ticks.full-width
          li Items up to 400cm
          li Moving house
          li Tail Lift
        a(href="/vehicles/hire/vans?size=xl").button Hire A Luton Van

block quoteForm

block promoted-items
  if Object.keys(vehicles).length > 0
    .container
      h3 Latest Hire Deals
    section.grey
      .container
        .promoted-items.row
          .cards
            each vehicle in vehicles
              +vehicleCard(vehicle, "hire")
          .row.center-content
            a(href="/vehicles/hire/vans").button.no-margin See all vans  

block extraFooterScripts
  script
    include scripts/dist/quoteForm-min.js