extends layout

block articleHeader
  .container
    .article-header
      h1 Contact Us

block articleContent
  article
    p To find out about the latest vehicles and offers or for more detailed information on our services, please call us or fill in the form below.
    form.contact-form(name="contact-form")
      label Name
      input(type="text" name="name" maxlength="50" required)
      input(name="telephone" type="tel" maxlength="50").bot-trap
      .split-container
        .split
          label Phone Number
          input(type="tel" name="phone" maxlength="20" required)
        .split
          label Email
          input(type="email" name="email" maxlength="100" required)
      label Message
      textarea(name="message" rows="10" required)
      .flash-message
      button(type="submit").button Send Message
    .contact-info.split-container
      .split
        ul
          li Moorland Self Drive
          li Childerplay Road
          li Knypersley
          li Stoke-on-Trent
          li ST8 7PZ
      .split
        ul
          li 
            a(href="mailto:info@moorlandselfdrive.co.uk") info@moorlandselfdrive.co.uk
          li 
            a(href="tel:+441782517782") 01782 517782

block map
  section.map
        .container
          h3 Find Us
          a(href="https://www.google.co.uk/maps/place/Moorland+Self+Drive/@53.0941029,-2.1798971,15z/data=!4m5!3m4!1s0x0:0x1b87236bea61478f!8m2!3d53.0941029!4d-2.1798971" target="_blank").button
            img(src="/images/icons/directions.svg", alt="Get directions icon").button-icon
            span Get Directions
        #map

block services

