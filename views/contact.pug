extends layout

block coverImage
  .cover-image-container.row
    picture
      source(media="(max-width: 767px)" srcset="/images/cover-images/contact-600.jpg 1x")
      img(src="/images/cover-images/contact.jpg" alt="Cover Image - Contact")

block articleHeader
  .container
    .article-header
      h1 Contact Us

block articleContent
  article
    p To find out about the latest vehicles and offers or for more detailed information on our services, please call us or fill in the form below.
    form.contact-form(name="contact-form")
      .split-container
        .split
          label Name
          input(type="text" name="name" maxlength="50" required)
        .split
          label Email
          input(type="email" name="email" maxlength="100" required)
      label Message
      textarea(name="message" rows="10" required)
      input(name="telephone" type="tel" maxlength="50").bot-trap
      .flash-message
      button(type="submit").button Send Message
    .contact-info.split-container
      .split
        ul
          li MSD Vehicle Solutions
          li Childerplay Road
          li Knypersley
          li Stoke-on-Trent
          li ST8 7PZ
      .split
        ul
          li 
            a(href="mailto:info@msdvehiclesolutions.co.uk") info@msdvehiclesolutions.co.uk
          li 
            a(href="tel:+441782517782") 01782 517782

block services

block extraFooterScripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.0/axios.min.js" async defer)
