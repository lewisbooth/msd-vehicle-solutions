include _mixins/_serviceCardMods
include _mixins/_serviceCardSales
include _mixins/_serviceCardHire
include _mixins/_serviceCardConversions
include _mixins/_serviceCardServicing
include _mixins/_vehicleCard

doctype html
html
  head
    title= `${title || "Car & Van Hire in Stoke on Trent"} | MSD Vehicle Solutions`
    meta(name="description" content=`${description || "Flexible Car & Van Hire, Sales & Leasing for Personal & Commercial Use Across Staffordshire Since 1986. Open 7 Days Per Week, Call Us Or Drop In Today."}`)
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon" type="image/png" href="/images/favicon/favicon.png")
    link(rel='stylesheet', href='/css/style.css')
  body
    block nav
      nav.main-nav.row
        .main-nav-container.container
          a(href="/")
            img.main-nav-main-logo(src="/images/logos/msd-logo-white.svg", alt="MSD Vehicle Solutions Logo")
          ul
            a(href="/" class=(currentPath === "/" ? 'active' : ''))
              li Hire
            a(href="/sales" class=(currentPath === "/sales" ? 'active' : ''))
              li Sales
            a(href="/leasing" class=(currentPath === "/leasing" ? 'active' : ''))
              li Leasing
            a(href="/van-conversions" class=(currentPath === "/van-conversions" ? 'active' : ''))
              li Conversions
            a(href="/modifications" class=(currentPath === "/modifications" ? 'active' : ''))
              li Modifications
            a(href="/servicing" class=(currentPath === "/servicing" ? 'active' : ''))
              li Servicing
            a(href="/contact" class=(currentPath === "/contact" ? 'active' : ''))
              li Contact
          a(href="tel: +441782517782") 
            .call-to-book
              span.call-to-book-text CALL US TODAY
              span.call-to-book-number 01782 517782

    block top-flash
      .top-flash
        .container
          h4 Website launch deal: 10% off all vehicle hire until Jan 31st!
          a(href="/hire/vans").button.button-small See vehicles

    block coverImage
      .cover-image-container.row(style="background-image: url('/images/cover-images/van-hire.jpg');")

    block articleHeader
      .container
        .article-header
          h1 Small Heading
          h3 Large Heading

    section.container.content
      block articleContent
        article
          p Article content

      block sidebar
        aside
          block quoteForm
            //- Instant quote form goes here

          a(href="tel: +441782517782") 
            .call-to-book
              span.call-to-book-text CALL US TODAY
              span.call-to-book-number 01782 517782

          .sidebar-block
            h4 Opening Hours
            ul.opening-times
              li
                span.day Mon - Fri
                span.time 8:30 - 18:00
              li
                span.day Sat
                span.time 8:30 - 13:00 / 17:00 - 18:00
              li
                span.day Sun
                span.time 8:30 - 09:00 / 17:00 - 18:00
          .sidebar-block.reviews
